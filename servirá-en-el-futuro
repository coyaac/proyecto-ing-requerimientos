ðŸ§± 4. Modelo de base de datos (Prisma)
// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  image         String?
  spotifyId     String   @unique
  topArtists    String[]
  topGenres     String[]
  topTracks     String[]
  createdAt     DateTime @default(now())
  likedTracks   Track[]  @relation("LikedTracks")
  matches       Match[]  @relation("UserMatches")
}

model Track {
  id        String   @id
  name      String
  artist    String
  album     String
  previewUrl String?
  imageUrl  String
  likedBy   User[]   @relation("LikedTracks")
}

model Match {
  id         String   @id @default(cuid())
  userA      User     @relation("UserMatches", fields: [userAId], references: [id])
  userAId    String
  userB      User     @relation("UserMatches", fields: [userBId], references: [id])
  userBId    String
  score      Float
  createdAt  DateTime @default(now())
}

